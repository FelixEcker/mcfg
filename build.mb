sector .config
  ; mariebuild c buildscript template from mbinit
  ; author: Marie Eckert

  depends:
    includes '-Isrc'

  mariebuild:
    libname   'libmcfg.a'
    compiler 'gcc'

    files 'butter/strutils:mcfg'

    std_flags     '-Wall -pedantic $(depends/includes) -c -o'
    debug_flags   '-ggdb'
    release_flags '-O3'

    comp_cmd '$(compiler) $(mode_flags) $(std_flags) out/$(file).o src/$(file).c'
    finalize_cmd 'ar -rc $(libname) out/$(files).o && ranlib $(libname)'
